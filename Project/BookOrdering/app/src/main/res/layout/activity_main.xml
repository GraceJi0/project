<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <EditText
        android:id="@+id/searchText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SearchBut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:hint="@string/searching"
        android:maxLines="1"
        android:selectAllOnFocus="true" />

    <Button
        android:id="@+id/SearchBut"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CateBut"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:onClick="sendSearch"
        android:text="@string/searchBut" />

    <Button
        android:id="@+id/CateBut"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SearchBut"
        android:layout_alignStart="@+id/SearchBut"
        android:layout_centerVertical="true"
        android:text="@string/CateBut" />
</RelativeLayout>