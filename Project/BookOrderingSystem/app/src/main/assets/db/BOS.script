CREATE SCHEMA PUBLIC AUTHORIZATION DBA

/*create new tables*/

/*book and customer*/
create memory table book(name varchar(100) not null primary key, author varchar(50) not null, info varchar(500) not null, price float not null, category varchar(50) not null, numberinstock integer not null, pictureid int)
create memory table customer(name varchar(20) not null primary key, password varchar(30) not null)

/*wishlist, cart and order of a customer*/
create memory table wishlist(customerName varchar(20) not null, bookName varchar(100) not null, constraint constraint1 primary key(customerName, bookName), constraint constraint2 foreign key(customerName) references customer(name), constraint constraint3 foreign key (bookName) references book(name))
create memory table cart(customerName varchar(20) not null, bookName varchar(100) not null, constraint constraint4 primary key(customerName, bookName), constraint constraint5 foreign key(customerName) references customer(name), constraint constraint6 foreign key (bookName) references book(name))

/*the orders, first record the order number, then add details into the database*/
/*first one only contains the orders number and name of the customers who made the orders*/
create memory table orders(number integer not null primary key, accountName varchar(20) not null, customerName varchar(20) not null, cardnumber varchar(20), email varchar(50), address varchar(100), price float not null, state varchar(10) not null, constraint constraint7 foreign key(accountName) references customer(name))
/*second one contains orders number and all books in to that order*/
create memory table orderDetails(number integer not null, bookName varchar(100) not null, constraint constraint8 primary key(number, bookName), constraint constraint9 foreign key(number) references orders(number), constraint constraint10 foreign key(bookName) references book(name))

