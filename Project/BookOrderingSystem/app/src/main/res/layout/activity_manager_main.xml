<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/logOutButton"
        android:textColor="@color/colorPrimary"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="16dp"
        android:text="log out"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startText"
        android:layout_alignStart="@+id/startText"
        android:layout_below="@+id/logOutButton"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="138dp"
        android:text="Welcome!"
        android:textSize="40dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:textSize="40dp"
        android:id="@+id/welcomeManagerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/welcomeText"
        android:layout_alignBottom="@+id/welcomeText"
        android:layout_toLeftOf="@+id/logOutButton"
        android:layout_toStartOf="@+id/logOutButton"
        tools:ignore="HardcodedText,SpUsage" />

    <Button
        android:id="@+id/viewCustomerButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeManagerText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="222dp"
        android:text="view all customers"
        android:textColor="@color/colorPrimary"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/viewBookButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewCustomerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:text="view all books"
        android:textColor="@color/colorPrimary"
        tools:ignore="HardcodedText" />

    <TextView
        android:textColor="#e7a311"
        android:textSize="25dp"
        android:id="@+id/startText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--------start from here to manage the system------"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText,SpUsage" />

    <Button
        android:id="@+id/viewOrderButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewCustomerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="View all orders"
        android:textColor="@color/colorPrimary" />
</RelativeLayout>