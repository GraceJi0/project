<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <EditText
        android:id="@+id/searchText"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLines="1"
        android:ems="10"
        android:hint="Search"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/listview"
        android:layout_toLeftOf="@+id/SearchBut"
        android:layout_toStartOf="@+id/SearchBut" />

    <Button
        android:id="@+id/SearchBut"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/searchText"
        android:layout_alignBottom="@+id/searchText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:onClick="sendSearch"
        android:text="@string/searchBut" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="500dp"
        android:layout_height="550dp"
        android:layout_alignLeft="@+id/Searchkey"
        android:layout_alignStart="@+id/Searchkey"
        android:layout_below="@+id/Searchkey"
        android:layout_marginTop="31dp" />

    <TextView
        android:id="@+id/Searchkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/searchText"
        android:layout_marginTop="130dp"
        android:maxLines="1"
        android:text="@string/defultTextView"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log out"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/MyAccountButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Account"
        android:layout_alignBaseline="@+id/logOutButton"
        android:layout_alignBottom="@+id/logOutButton"
        android:layout_toLeftOf="@+id/logOutButton"
        android:layout_toStartOf="@+id/logOutButton" />

    <Button
        android:id="@+id/cartButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/MyAccountButton"
        android:layout_toStartOf="@+id/MyAccountButton"
        android:text="cart" />
</RelativeLayout>