<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/bookAuthorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/bookNameText"
        android:layout_alignLeft="@+id/bookNameText"
        android:layout_alignStart="@+id/bookNameText" />

    <ImageView
        android:id="@+id/bookImageView"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/bookNameText"
        android:layout_toRightOf="@+id/listSelect"
        android:layout_toEndOf="@+id/listSelect" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/bookNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="TextView"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bookImageView"
        android:layout_toEndOf="@+id/bookImageView"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <TextView
        android:id="@+id/bookPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#cc3910"
        android:layout_below="@+id/bookAuthorText"
        android:layout_alignLeft="@+id/bookAuthorText"
        android:layout_alignStart="@+id/bookAuthorText" />

    <CheckBox
        android:id="@+id/listSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bookPriceText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />
</RelativeLayout>